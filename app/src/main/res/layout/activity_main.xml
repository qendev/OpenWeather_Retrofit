<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#673AB7"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/city_name"
        android:layout_width="180dp"
        android:textColorHint="@color/hint_textcolor"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:hint="Enter the city name" />
    <Button
        android:id="@+id/city_click"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@color/button_backgroundcolor"
        android:layout_below="@id/city_name"
        android:layout_centerHorizontal="true"
        android:layout_margin="32dp"
        android:text="GET Weather" />
    <TextView
        android:id="@+id/response_text"
        android:layout_width="match_parent"
        android:textColor="@color/displaytext_textcolor"
        android:textSize="18sp"
        android:layout_height="match_parent"
        android:layout_below="@id/city_click" />



</RelativeLayout>